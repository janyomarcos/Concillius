@model IEnumerable<Concillius.Domain.Cadastros.ContaBancaria>

@{
    ViewBag.Title = "Buscar Todos";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<table class="table table-condensed table-bordered"> 
    
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.CodigoBanco)    
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CodigoAgencia)    
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CodigoEmpresa)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CodigoConta)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Descricao)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Situacao)
        </th>

        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.CodigoBanco)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CodigoAgencia)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CodigoEmpresa)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CodigoConta)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Descricao)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Situacao)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Excluir", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>


<br />

<p style="text-align: right">
    @Html.ActionLink("Novo", "Create", "ContaBancaria",  null, new { @class = "btn btn-success" , @style="color:white; text-decoration:none;"})
</p>